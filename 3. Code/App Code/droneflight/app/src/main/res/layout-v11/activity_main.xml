<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dronecontrol.MainActivity"
    android:background="#EDECEC">


    <LinearLayout
        android:layout_width="661dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ProgressBar
            android:id="@+id/seekBar"
            android:layout_width="286dp"
            android:layout_height="265dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/joystick"
            android:rotation="-90"
            tools:progress="60" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="307dp"
        android:layout_height="306dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="171dp"
        android:layout_marginEnd="222dp"
        android:layout_marginRight="222dp"
        android:orientation="vertical"
        android:scaleX="2"
        android:scaleY="2"
        android:max="100"
        android:progress="5"
        tools:ignore="UnknownId"
        android:layout_marginLeft="171dp" >



    </LinearLayout>


    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="135dp"
        android:layout_height="81dp"
        android:layout_alignTop="@+id/toggleButton1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="6dp"
        android:background="#911B1B"
        android:checked="false"
        android:text="ToggleButton"
        android:textAllCaps="false"
        android:textOff="POWER ON"
        android:textOn="POWER OFF"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <ProgressBar
        android:id="@+id/seekBar2"
        android:layout_width="155dp"
        android:layout_height="158dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="87dp"
        android:layout_marginRight="50dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="5"
        android:progressDrawable="@drawable/joystick"
        android:rotation="90"
        android:scaleX="2"
        android:scaleY="2"
        tools:progress="60" />

</RelativeLayout>
