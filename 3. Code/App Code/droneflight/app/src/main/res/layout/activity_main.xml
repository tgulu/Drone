<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dronecontrol.MainActivity"
    android:background="#D3CFCF">


    <LinearLayout
        android:layout_width="661dp"
        android:layout_height="264dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ProgressBar
            android:id="@+id/seekBar"
            android:layout_width="254dp"
            android:layout_height="232dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/joystick"
            android:rotation="-90"
            android:translationX="-10"
            tools:progress="60" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="287dp"
        android:layout_height="306dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="222dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="222dp">

    </LinearLayout>



    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="135dp"
        android:layout_height="81dp"
        android:layout_alignTop="@+id/toggleButton1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="313dp"
        android:layout_marginTop="199dp"
        android:layout_marginBottom="64dp"
        android:layout_toStartOf="@+id/TextView1"
        android:layout_toLeftOf="@+id/TextView1"
        android:layout_toRightOf="@+id/textView4"
        android:background="#911B1B"
        android:checked="false"
        android:text="ToggleButton"
        android:textAllCaps="false"
        android:textOff="CUTOFF"
        android:textOn="!! CUTOFF !!"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:translationX="-35"
        android:translationY="20"
        tools:ignore="UnknownId" />

    <ProgressBar
        android:id="@+id/seekBar2"
        android:layout_width="254dp"
        android:layout_height="232dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="0dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/joystick"
        android:rotation="-90"
        android:translationX="20"
        android:translationY="-80"
        tools:progress="60"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp" />

</RelativeLayout>
